{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es6"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "baseUrl": "./src",
      "paths": {
        "@/*": [
          "*"
        ]
      },
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true, //
      //"forceConsistentCasingInFileNames": true,//
      //"strict": true,//
      "skipLibCheck": true,
      "resolveJsonModule": true
    }
}
